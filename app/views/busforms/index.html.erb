<script type="text/javascript">
  $( function() {
    var sourceFirst = []
    <% BusDetail.uniq.pluck(:source_first).each do |sf| %>
      sourceFirst.push("<%= sf %>")
    <% end %>
    $( "#SourceValue" ).autocomplete({
      source: sourceFirst
    });

    var destiFirst = []
    <% BusDetail.uniq.pluck(:destination_first).each do |sf| %>
      destiFirst.push("<%= sf %>")
    <% end %>
    $( "#DestinationValue" ).autocomplete({
      source: destiFirst
    });
  } );
</script>