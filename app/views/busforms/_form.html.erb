<%= simple_form_for(@busform) do |f| %>
  <%= f.error_notification %>
    <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>

<% end %>
